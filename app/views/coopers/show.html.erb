<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3><%= @cooper.name %></h3>
    </div>


      <div class="ibox-content">
    <div class="table-responsive m-t">
      <table class="table invoice-table">
        <thead>
        <tr>
          <th>联系人</th>
          <th>联系人类别</th>
          <th>联系电话</th>
          <th>操作</th>
        </tr>
        </thead>
        <tbody>
<% @cooperusers.each do |cooperuser| %>
        <tr>
          <td>
<%= cooperuser.name %>
          </td>
          <td>
            <%= cooperuser.usertype %>
          </td>
          <td>
            <%= cooperuser.tel %>
          </td>
          <td>
            <%= link_to ' 删除', [@cooper,cooperuser], method: :delete, data: { confirm: '确认删除?' },class:'fa fa-trash' %>
          </td>

        </tr>
<% end %>

        </tbody>
      </table>
      <div class="ibox-content form-horizontal m-t">
      <%= form_for([@cooper,@cooper.cooperusers.build],:html => {:class=>'form-horizontal m-t',:multipart => true,:id=>'userform'}) do |f| %>
          <div class="form-group">
            <label class="col-sm-4 control-label">联系人：</label>

            <div class="col-sm-6">
              <%= f.text_field :name,class: "form-control" %>
            </div>
          </div>

            <div class="form-group">
              <label class="col-sm-4 control-label">联系人类别：</label>

              <div class="col-sm-6">
                <%= f.text_field :usertype,class: "form-control" %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-4 control-label">联系人电话：</label>

              <div class="col-sm-6">
                <%= f.text_field :tel,class: "form-control" %>
              </div>
            </div>
            <div class="text-right">
<%= link_to '返回', coopers_path,class: "btn btn-w-m btn-primary" %>&nbsp;
            <%= f.submit '确定',class: "btn btn-w-m btn-primary ",id:'smt' %>
            </div>

      <% end %>
</div>

    </div>
      </div>

    <!-- /table-responsive -->


  </div>
</div>
<%=render 'layerend' %>