<%= render 'layerbegin' %>
<script>
    $(document).ready(function(){

        $('#searchbtn').click(function(){
            window.location.href=window.location.href.split('?')[0]+'?search='+$('#search').val();
        });



    });
</script>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>原材料定义</h5>
      <div class="ibox-tools col-sm-3" style="margin-top: -5px;">
        <div class="input-group">
          <input type="text" id="search" placeholder="" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" id="searchbtn" class="btn btn-sm btn-primary"> 搜索</button> </span>
        </div>
      </div>
    </div>


    <div class="ibox-content">


      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">材料名称</th>
          <th class="text-center">单位</th>
          <th class="text-center">售价</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @newraws.each do |newraw| %>
            <tr>
              <td>
                <%= newraw.name %>
              </td>
              <td><%= newraw.unit %></td>
              <td><%= newraw.price %></td>
              <td>

                <%= link_to '编辑',edit_newraw_path(newraw),class:'fa fa-edit' %>&nbsp;

                    <%= link_to ' 删除', newraw, method: :delete, data: { confirm: '确认删除?' },class:'fa fa-trash' %>


              </td>

            </tr>
        <% end %>
        </tbody>
      </table>


      <%= link_to "新增",new_newraw_path,class: "btn btn-w-m btn-primary pull-right" %>
          <br/>




          </div>
          </div>
          </div>

      <%=render 'layerend' %>