<%= render 'layerbegin' %>
<script>
    $(document).ready(function(){




        $('#searchbtn').click(function(){
            window.location.href=window.location.href.split('?')[0]+'?search='+$('#search').val();
        });



    });
</script>
<div class="col-lg-12">
  <div class="ibox float-e-margins">



    <div class="ibox-content">
      <div class="ibox-title">
        <h5>加工库库存</h5>
      </div>

      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">原材料</th>
          <th class="text-center">单位</th>
          <th class="text-center">数量</th>
          <th class="text-center">长</th>
          <th class="text-center">宽</th>
          <th class="text-center">用户宽</th>
          <th class="text-center">原材料成本（平方米）</th>
          <th class="text-center">用户成本（平方米）</th>
        </tr>
        </thead>
        <tbody>
        <% sum = 0 %>
        <% @workdepots.each do |workdepot| %>
            <tr>
              <td>
                <% if workdepot.newraw_id %>
                <% newraw = Newraw.find(workdepot.newraw_id) %>
                <% if newraw %>
                <%= newraw.name %>
                <% end %>
                    <% end %>
              </td>
              <td>
                <% if workdepot.newraw_id %>
                    <% newraw = Newraw.find(workdepot.newraw_id) %>
                    <% if newraw %>
                        <%= newraw.unit %>
                    <% end %>
                <% end %>
              </td>

              <td>
                <%= workdepot.number %>
              </td>
              <td>
                <%= workdepot.width %>
              </td>
              <td>
                <%= workdepot.height %>
              </td>
              <td>
                <%= workdepot.userheight %>
              </td>
              <td>
                <%= workdepot.price * workdepot.width / 1000 * workdepot.height / 1000  %>
              </td>
              <td>
                <%= workdepot.price * workdepot.width / 1000 * workdepot.userheight / 1000  %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <div class="col-md-6">
      <table class="table invoice-total">
        <tbody>
        <tr>
          <td><strong>材料成本合计：</strong>
          </td>
          <td><%= @width %></td>
        </tr>
        </tbody>
      </table>
      </div>

      <div class="col-md-6">
        <table class="table invoice-total">
          <tbody>
          <tr>
            <td><strong>用户成本合计：</strong>
            </td>
            <td><%= @userheight %></td>
          </tr>
          </tbody>
        </table>
      </div>

          <br/>




          </div>
          </div>
          </div>

      <%=render 'layerend' %>