<%= render 'layerbegin' %>
<script>
    $(document).ready(function(){




        $('#searchbtn').click(function(){
            window.location.href=window.location.href.split('?')[0]+'?search='+$('#search').val();
        });



    });
</script>
<div class="col-lg-12">
  <div class="ibox float-e-margins">



    <div class="ibox-content">
      <div class="ibox-title">
        <h5>加工库入库记录</h5>
      </div>

      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">加工单号</th>

          <th class="text-center">数量</th>
          <th class="text-center">长</th>
          <th class="text-center">宽</th>
          <th class="text-center">用户宽</th>
          <th class="text-center">原材料成本（平方米）</th>
          <th class="text-center">用户成本（平方米）</th>
        </tr>
        </thead>
        <tbody>
        <% sum = 0 %>
        <% @workrecordes.each do |workrecord| %>
            <tr>
              <td>
                <%= workrecord.worknumber %>
              </td>
              <td>
                <%= workrecord.number %>
              </td>
              <td>
                <%= workrecord.width %>
              </td>
              <td>
                <%= workrecord.height %>
              </td>
              <td>
                <%= workrecord.userheight %>
              </td>
              <td>
                <%= workrecord.price * workrecord.width / 1000 * workrecord.height / 1000 * workrecord.number %>
              </td>
              <td>
                <%= workrecord.price * workrecord.width / 1000 * workrecord.userheight / 1000 * workrecord.number %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>



      <br/>




    </div>
  </div>
</div>

<%=render 'layerend' %>