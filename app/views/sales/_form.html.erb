<script>
  var way='';
    $(document).ready(function(){

        getdata();



        var datalist;
        $.ajax({
            type : 'get',
            async : false,
            url :'../getraw',
            success : function(data) {
                datalist=data;
            }
        });
        suggest(datalist);

        function suggest(data) {
            var testdataBsSuggest = $("#raw_data").bsSuggest(
                    {
                        indexId: 0, indexKey: 1,
                        data: {
                            "value": data
                        }
                    }).on('onSetSelectValue', function (e, keyword) {
              $('#customer_id').val(keyword.id);
            });
        }




        $('#modalsubmit').click(function(){
            $.ajax({
                type : 'get',
                async : false,
                url :'../changesalere',
                data:{
                    way:way,
                    salereid:$('#salereid').val(),
                    saleid:$('#modelid').val(),
                    number:$('#modelnumber').val(),
                    price:$('#modelprice').val(),
                    sum:$('#modelsum').val()
                },
                success : function(json) {
                  getdata();
                  $('#raw_data').val('');
                  $('#modelspec').val('');
                  $('#modelunit').val('');
                  $('#modelprice').val('');
                  $('#modelnumber').val('');
                  $('#modelsum').val('');
                }
            });

        });

      $('#modelprice').change(function(){
        $('#modelsum').val(parseFloat($('#modelprice').val()) * parseFloat($('#modelnumber').val()));
      });

      $('#modelnumber').change(function(){
        $('#modelsum').val(parseFloat($('#modelprice').val()) * parseFloat($('#modelnumber').val()));
      });

      $('#edits').click(function(){
        way='edit';
        //alert($('#table').bootstrapTable('getSelections')[0].id);
        $('#modelid').val($('#table').bootstrapTable('getSelections')[0].id);
        $('#sale_data').val($('#table').bootstrapTable('getSelections')[0].sale);
        $('#modelspec').val($('#table').bootstrapTable('getSelections')[0].spec);
        $('#modelunit').val($('#table').bootstrapTable('getSelections')[0].unit);
        $('#modelnumber').val($('#table').bootstrapTable('getSelections')[0].number);
        $('#modelprice').val($('#table').bootstrapTable('getSelections')[0].price);
        $('#modelsum').val($('#table').bootstrapTable('getSelections')[0].sum);
        $("#addModal").modal();

      });

      $('#deletes').click(function(){
        way='delete';
        var ids = new Array();
        $.each($('#table').bootstrapTable('getSelections'),function(i,item){
          ids.push(item.id);
        });

        $.ajax({
          type : 'get',
          async : false,
          url :'../changereserve',
          data:{
            way:way,
            saleid:ids
          },
          success : function(json) {
            getdata();
          }
        });
      });

      $('#adds').click(function(){
        way='add';
      });

      $('#smt').click(function(){
        $('#summary').val($('#summaryinput').val());
        $('#user').val($('#userinput').val());
        $('#pay').val($('#payinput').val());
      });

      $("#data_1 .input-group.date").datepicker({todayBtn:"linked",keyboardNavigation:!1,forceParse:!1,calendarWeeks:!0,autoclose:!0});
      $('#selectorderdate').change(function(){

        $('#orderdate').val($('#selectorderdate').val());

      });

    });

    window.operateEvents = {

        'click .edit': function (e, value, row, index) {
          way='edit';
          //alert($('#table').bootstrapTable('getSelections')[0].id);

          $('#modelid').val(row.id);
          $('#sale_data').val(row.sale);
          $('#modelspec').val(row.spec);
          $('#modelunit').val(row.unit);
          $('#modelnumber').val(row.number);
          $('#modelprice').val(row.price);
          $('#modelsum').val(row.sum);
          $("#addModal").modal();
        },
        'click .remove': function (e, value, row, index) {
          way='delete';
          $.ajax({
            type : 'get',
            async : false,
            url :'../changereserve',
            data:{
              way:way,
              saleid:row.id
            },
            success : function(json) {
              getdata();
            }
          });

        }
    };

    function operateFormatter(value, row, index) {
        return [
            '<a class="edit" href="javascript:void(0)" title="编辑">',
            '<i class="fa fa-pencil"></i>',
            '</a>&nbsp;  ',
            '<a class="remove" href="javascript:void(0)" title="删除">',
            '<i class="fa fa-trash"></i>',
            '</a>'
        ].join('');
    }

  function getdata(){
    var tablejson;
    $.ajax({
      async : false,
      url : "../getdata",
      type : "GET",
      dataType : 'json',
      timeout : 5000,
      data:{
        saleid:$('#saleid').val()
      },
      success : function(jsonstr) {// 客户端jquery预先定义好的callback函数,成功获取跨域服务器上的json数据后,会动态执行这个callback函数
        //alert(jsonstr.price);
        tablejson=jsonstr;
        $('#table').bootstrapTable({
          columns: [{
            checkbox: true
          },{
            field: 'id',
            title: 'id',
            visible:false
          },{
            field: 'sale',
            title: '产品'
          },
            {
              field: 'spec',
              title: '规格'
            },
            {
              field: 'unit',
              title: '单位'
            },
            {
              field: 'price',
              align: 'right',
              title: '成本'
            }, {
              field: 'number',
              align: 'right',
              title: '数量'
            },{
              field: 'sum',
              align: 'right',
              title: '合计'
            },{
              field: 'operate',
              title: '操作',
              align: 'center',
              events: operateEvents,
              formatter: operateFormatter
            }],
          formatLoadingMessage: function(){
            return "";
          },
          data: tablejson
        });

        $('#table').bootstrapTable('load',tablejson);
        var sum=0;
        $.each(jsonstr,function(i,item){
          sum+=parseFloat(item.sum);
        });
        $('#sumspan').text(sum);
        $('#payablespan').text(sum);
        $('#payable').val(sum);

      },
      error : function(xhr) {
      }
    });
  }


</script>
<div class="col-md-12 ibox ibox-content">
  <div class="ibox-content form-horizontal m-t">
    <input type="hidden" id="saleid" value=<%= @sale.id %> >




    </div>

    <div class="hr-line-dashed"></div>
    <div class="example-wrap">

      <div class="example">
        <div class="btn-group hidden-xs" id="exampleToolbar" role="group">
          <button type="button" class="btn btn-outline btn-default" data-toggle="modal" data-target="#addModal" id="adds">
            <i class="fa fa-plus" aria-hidden="true"></i>
          </button>
          <button type="button" class="btn btn-outline btn-default" id="edits">
            <i class="fa fa-edit" aria-hidden="true"></i>
          </button>
          <button type="button" class="btn btn-outline btn-default" id="deletes">
            <i class="fa fa-trash" aria-hidden="true"></i>
          </button>
        </div>
        <table id="table" data-mobile-responsive="true">
        </table>
      </div>
    </div>


  </div>

  <div class="full-height-scroll">
  <div class="table-responsive">
  <table class="table table-striped table-hover">
    <tbody>
    <tr>

      <td class="col-lg-3">
        <div class="form-group">
          <label class="col-sm-4 control-label text-right" style="margin-top: 10px;">经手人：</label>
          <div class="col-sm-8">
            <input class="form-control text-right" id="userinput">
          </div>
        </div>
      </td>
      <td class="col-lg-3">
        <div class="form-group">
          <label class="col-sm-3 control-label" style="margin-top: 10px;">合计：</label>
          <div class="col-sm-7">
            <span class="form-control" id="sumspan" ></span>
          </div>
        </div>
      </td>
      <td class="col-lg-3 text-right">
        <%= form_for(@sale,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>
            <%= f.hidden_field :name,class: "form-control",id:'name' %>

            <%= f.hidden_field :spec,class: "form-control",id:'spec' %>
            <%= f.hidden_field :unit,class: "form-control",id:'unit' %>
            <%= f.hidden_field :cost,class: "form-control",id:'cost' %>
            <%= f.hidden_field :price,class: "form-control",id:'price' %>


            <%= f.submit '确定',class: "btn btn-w-m btn-primary",id:'smt',style:'margin-top:-15px;' %>
            <% end %>
      </td>


    </tr>
    </tbody>
  </table>
    </div>
    </div>



</div>

