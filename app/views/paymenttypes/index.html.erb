</script>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>收款方式管理</h5>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">收款方式</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @paymenttypes.each do |paymenttype| %>
            <tr>
              <td>
                <%= paymenttype.paymenttype %>
              </td>
              <td>
                <%= link_to '编辑',edit_paymenttype_path(paymenttype),class:'fa fa-edit' %>&nbsp;
                <%= link_to ' 删除', paymenttype, method: :delete, data: { confirm: '确认删除?' },class:'fa fa-trash' %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增",new_paymenttype_path,class: "btn btn-w-m btn-primary pull-right" %>
      <br/>
    </div>
  </div>
</div>

