<%= render 'layerbegin' %>
<script>
    $(document).ready(function(){

    });
</script>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>工具库</h5>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">工具名称</th>
          <th class="text-center">规格</th>
          <th class="text-center">单位</th>
          <th class="text-center">数量</th>
          <th class="text-center">借出数量</th>

        </tr>
        </thead>
        <tbody>
        <% @goods.each do |good| %>
            <tr>
              <td>
                <% mygood = Good.find(good.good_id) %>
                <% if mygood %>
                <%= mygood.name %>
                    <% end %>
              </td>
              <td>
                <% if mygood %>
                <%= mygood.spec %>
                <% end %>
              </td>
              <td>
                <% if mygood %>
                <%= mygood.unit %>
                <% end %>
              </td>
              <td>
                <%= good.number %>
              </td>
              <td>
                <%= good.borrownumber.to_f %>
              </td>

            </tr>
        <% end %>
        </tbody>
      </table>

      <br/>
    </div>
  </div>
</div>

<%=render 'layerend' %>
